docker.enabled = true
docker.mountFlags = 'Z'

process {
    withName: STAR {
        container = 'rnaseq-pipeline'
    }
    withName: regtools {
        container = 'rnaseq-pipeline'
    }
    withName: stringtie {
        container = 'rnaseq-pipeline'
    }
    withName: intron_analysis {
        container = 'splicing-analysis'
    }
}

executor {
	 queueSize = 1 // Prevents parallel execution of jobs
}
